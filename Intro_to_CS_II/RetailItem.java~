public class RetailItem{
  String description;
  int unitsOnHand;
  double price;
  public RetailItem(){
  }
  public RetailItem(String d, int u, double p){
    description=d;
    unitsOnHand=u;
    price=p;
  }
  public void set Description(String d){
    description=d;
  }
  public void setUnitsOnHand(int u){
    unitsOnHand=u;
  }
  public void setPrice(double p){
    price=p;
  }
  public String getDescription(){
    return description;
  }
  public int getUnitsOnHand(){
    return unitsOnHand;
  }
  public double getPrice(){
    return price;
  }
  
}
